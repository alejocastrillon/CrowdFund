
<h1>Posts</h1>

<table class="ui sorteable celled table">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Cuerpo</th>
      <th colspan="3"><i class="pencil alternate icon"></i> Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td class="positive"><%= link_to semantic_icon('eye')+'Ver', post %></td>
        <% if user_signed_in? %>
          <td class="warning"><%= link_to semantic_icon('pencil')+'Editar', edit_post_path(post) %></td>
          <td class="negative"><%= link_to semantic_icon('trash')+'Eliminar', post, method: :delete, data: { confirm: 'Esta segunro desea eliminar el post '+post.title+'?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_path %>
<% end %>
